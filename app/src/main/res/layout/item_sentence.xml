<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.i.englishbook.common.CodeHelper" />

        <import type="android.view.View" />

        <variable
            name="sentence"
            type="com.i.englishbook.model.Sentence" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@{sentence.IsSelected ? @drawable/ic_row_selected : @drawable/ic_row}"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:onClick="@{sentence::onClick}"
        android:orientation="horizontal"
        android:tag="@{position}">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_1"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{sentence.E}"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/text_size_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{sentence.V}"
                android:textColor="@color/text_color_3"
                android:textSize="@dimen/text_size_2"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{sentence.SpeedText}"
                android:textColor="@{sentence.ColorSpeedText}"
                android:textSize="@dimen/text_size_2"
                android:visibility="@{sentence.SpeedText == `` ? View.GONE:View.VISIBLE}" />
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:src="@{sentence.IsPlayed ? @drawable/ic_sound_played : @drawable/ic_sound}" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="@{sentence::onClickSpeech}"
            android:layout_margin="@dimen/padding_0"
            android:src="@drawable/ic_speech"
            android:tag="@{position}" />

    </LinearLayout>

</layout>
